import numpy as np
import time

print("\n--- Exercício 4: O Chão de Lava ---")
posicao_agente = 0
objetivo = 9
chao_de_lava = [3, 4, 5]
recompensa_total = 0

for passo in range(20):
    acao = np.random.choice(['esquerda', 'direita'])
    print(f"Passo {passo + 1}: Posição={posicao_agente}, Ação='{acao}'")

    # Movimento do agente
    if acao == 'direita':
        posicao_agente += 1
    else:
        posicao_agente -= 1

    # Mantém o agente dentro dos limites do corredor
    posicao_agente = np.clip(posicao_agente, 0, 9)

    # TODO 1: Verifica se o agente chegou no objetivo
    if posicao_agente == objetivo:
        recompensa_total += 50
        print(" Objetivo alcançado! Recompensa +50.")
        break

    # TODO 2: Calcula a recompensa do passo
    if posicao_agente in chao_de_lava:
        recompensa_passo = -5
        print(" Chão de lava! Penalidade -5.")
    else:
        recompensa_passo = -1
        print(" Passo normal. Penalidade -1.")

    # TODO 3: Atualiza a recompensa total
    recompensa_total += recompensa_passo

    time.sleep(0.5)

print(f"\nSimulação finalizada! Posição final: {posicao_agente}, Recompensa: {recompensa_total}")

